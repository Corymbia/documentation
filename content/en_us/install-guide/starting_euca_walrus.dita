<task id="starting_euca_walrus">
    <title>Start Walrus</title>
    <shortdesc/>
    <prolog>
        <metadata>
            <keywords>
                <indexterm>walrus <indexterm>starting</indexterm>
                </indexterm>
            </keywords>
        </metadata>
    </prolog>

    <taskbody>
        <context>
        	<note type="important">Skip this step if you not using Walrus as your object storage
        		backend, or if you installed Walrus on the same host as
                the CLC.</note>
            <p>To start Walrus:</p>
        </context>
        <steps>
            <step>
                <cmd>Log in to the Walrus server and enter the following
                    command:</cmd>
                <info>
                    <codeblock conref="../shared/conrefs.dita#prod/euca_start"/>
                </info>
            </step>
        </steps>
        
    </taskbody>
</task>
